# Zentity Services Environment Variables
# Copy this file to .env and update the values

# Better Auth Secret - MUST change in production!
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-change-in-production

# Better Auth URL (the public URL of your frontend)
BETTER_AUTH_URL=http://localhost:3000

# Web debug flags
# Set to 1 to enable liveness debug overlay + console logs
NEXT_PUBLIC_LIVENESS_DEBUG=0

# Relying Party redirect allowlist (OAuth-style flow)
# Comma-separated list of EXACT redirect URIs allowed for /api/rp/authorize
# Example: RP_ALLOWED_REDIRECT_URIS=http://localhost:4000/callback,https://partner.example.com/zentity/callback
RP_ALLOWED_REDIRECT_URIS=

# Optional (recommended in production): internal service-to-service auth token.
# If set, `apps/web` will send it to `apps/ocr` + `apps/fhe` as `X-Zentity-Internal-Token`,
# and those services will reject requests without it.
# Generate with: openssl rand -base64 32
INTERNAL_SERVICE_TOKEN=
