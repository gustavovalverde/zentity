# Zentity Services Environment Variables
# Copy this file to .env and update the values

# Better Auth Secret - MUST change in production!
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-change-in-production

# Better Auth URL (the public URL of your frontend)
BETTER_AUTH_URL=http://localhost:3000

# Web debug flags
# Set to 1 to enable liveness debug overlay + console logs
NEXT_PUBLIC_LIVENESS_DEBUG=0
