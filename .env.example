# Optional: additional origins allowed by Better Auth (comma-separated)
TRUSTED_ORIGINS=

# Anonymous + SIWE email domains (used to generate placeholder emails)
ANONYMOUS_EMAIL_DOMAIN=anon.zentity.app
SIWE_EMAIL_DOMAIN=wallet.zentity.app

# Logging & Debug Configuration
LOG_LEVEL=info
NEXT_PUBLIC_DEBUG=0

# -----------------------------------------------------------------------------
# OAuth (social + generic providers)
# -----------------------------------------------------------------------------
# Social OAuth (Google/GitHub)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Expose configuration to UI (set to "true" to show buttons)
NEXT_PUBLIC_GOOGLE_CONFIGURED=false
NEXT_PUBLIC_GITHUB_CONFIGURED=false

# Generic OAuth providers (JSON arrays)
# Server-side (full provider config)
GENERIC_OAUTH_PROVIDERS=[]
# Example: [{"providerId":"partner","clientId":"...","clientSecret":"...","authorizationUrl":"...","tokenUrl":"...","redirectURI":"...","scopes":["openid","profile"],"userInfoUrl":"..."}]
# Client-side (labels for buttons)
NEXT_PUBLIC_GENERIC_OAUTH_PROVIDERS=[]
# Example: [{"providerId":"partner","label":"Partner SSO"}]
