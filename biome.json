{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": [
      "**",
      "!!**/node_modules/**",
      "!!**/.next/**",
      "!!**/dist/**",
      "!!**/build/**",
      "!!**/coverage/**",
      "!!**/.synpress-wallet-setup-dist/**",
      "!!apps/web/public/fhevm/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": true },
              ":BLANK_LINE:",
              ":BUN:",
              ":NODE:",
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              "@/**",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "linter": {
    "domains": {
      "react": "recommended",
      "test": "recommended",
      "project": "recommended"
    },
    "rules": {
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noConsole": "warn",
        "noDebugger": "error",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "useIterableCallbackReturn": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error",
        "useExportType": "error",
        "useImportType": "error",
        "noDefaultExport": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "useOptionalChain": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noImgElement": "warn"
      },
      "nursery": "on",
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useButtonType": "warn",
        "noRedundantAlt": "warn",
        "useAriaPropsSupportedByRole": "warn"
      }
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["**"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "warn",
            "noTernary": "off",
            "useAwaitThenable": "off",
            "noUnresolvedImports": "off",
            "useExplicitType": "off",
            "noIncrementDecrement": "off",
            "noContinue": "off",
            "useDestructuring": "off",
            "noJsxLiterals": "off",
            "noForIn": "off",
            "noMultiStr": "off",
            "noProto": "off",
            "noSyncScripts": "off",
            "useRegexpExec": "off",
            "noUnnecessaryConditions": "off",
            "useQwikValidLexicalScope": "off",
            "useQwikMethodUsage": "off",
            "noVueDataObjectDeclaration": "off",
            "noVueDuplicateKeys": "off",
            "noVueReservedKeys": "off",
            "noVueReservedProps": "off",
            "noVueSetupPropsReactivityLoss": "off",
            "noVueVIfWithVFor": "off",
            "useVueDefineMacrosOrder": "off",
            "useVueHyphenatedAttributes": "off",
            "useVueMultiWordComponentNames": "off",
            "useVueValidVBind": "off",
            "useVueValidVElse": "off",
            "useVueValidVElseIf": "off",
            "useVueValidVHtml": "off",
            "useVueValidVIf": "off",
            "useVueValidVOn": "off",
            "useVueValidVText": "off",
            "useConsistentGraphqlDescriptions": "off",
            "useUniqueGraphqlOperationName": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**",
        "**/fixtures/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noConsole": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          },
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.config.ts", "**/*.config.mjs", "**/*.config.js"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["**/e2e/automation/**", "**/scripts/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
