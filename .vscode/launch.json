{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side (apps/web)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/apps/web",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Next.js: debug client-side (apps/web)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack (apps/web)",
      "type": "node-terminal",
      "request": "launch",
      "command": "NODE_OPTIONS='--inspect' pnpm run dev",
      "cwd": "${workspaceFolder}/apps/web",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/apps/web"
      }
    },
    {
      "name": "Vitest: debug tests (apps/web)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run test -- --inspect-brk --no-file-parallelism",
      "cwd": "${workspaceFolder}/apps/web"
    }
  ]
}
