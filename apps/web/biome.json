{
  "root": false,
  "extends": ["../../biome.json"],
  "linter": {
    "domains": {
      "next": "recommended"
    }
  },
  "files": {
    "includes": [
      "src/**",
      "e2e/**",
      "scripts/**",
      "*.ts",
      "*.mts",
      "*.js",
      "*.cjs",
      "!!**/src/app/globals.css",
      "!!**/node_modules",
      "!!**/.next",
      "!!**/coverage",
      "!!**/playwright-report",
      "!!**/test-results",
      "!!**/dist",
      "!!**/build",
      "!!**/public/coi-serviceworker.js",
      "!!**/public/fhevm",
      "!!**/public/bb",
      "!!**/public/workerHelpers.js",
      "!!**/public/*.wasm"
    ]
  },
  "overrides": [
    {
      "includes": ["src/components/ui/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useFocusableInteractive": "off",
            "useSemanticElements": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["src/app/**/error.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noShadowRestrictedNames": "off"
          }
        }
      }
    },
    {
      "includes": ["src/components/onboarding/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off",
            "noStaticElementInteractions": "off",
            "useKeyWithClickEvents": "off"
          },
          "performance": {
            "noImgElement": "off"
          },
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["src/hooks/**/*.ts"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["src/app/(dashboard)/**/*.tsx", "src/app/demo/**/*.tsx"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    }
  ]
}
