{
  "extends": ["../../biome.json"],
  "files": {
    "includes": ["**", "!src/app/globals.css"]
  },
  "overrides": [
    {
      "includes": ["src/components/ui/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useFocusableInteractive": "off",
            "useSemanticElements": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["src/app/**/error.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noShadowRestrictedNames": "off"
          }
        }
      }
    },
    {
      "includes": ["src/components/onboarding/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off",
            "noStaticElementInteractions": "off",
            "useKeyWithClickEvents": "off"
          },
          "performance": {
            "noImgElement": "off"
          },
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["src/hooks/**/*.ts"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    },
    {
      "includes": ["src/app/(dashboard)/**/*.tsx", "src/app/demo/**/*.tsx"],
      "linter": {
        "rules": {
          "nursery": {
            "noFloatingPromises": "off"
          }
        }
      }
    }
  ]
}
