{
  "name": "zk-service",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "circuit:compile:nationality": "mkdir -p artifacts/nationality && circom circuits/nationality_membership.circom --r1cs --wasm --sym -o artifacts/nationality",
    "circuit:setup:nationality": "snarkjs groth16 setup artifacts/nationality/nationality_membership.r1cs ptau/pot14.ptau artifacts/nationality/nationality_0000.zkey",
    "circuit:contribute:nationality": "snarkjs zkey contribute artifacts/nationality/nationality_0000.zkey artifacts/nationality/nationality_final.zkey --name='Zentity' -v -e='random entropy string'",
    "circuit:export:nationality": "snarkjs zkey export verificationkey artifacts/nationality/nationality_final.zkey artifacts/nationality/verification_key.json",
    "circuit:build:nationality": "pnpm run circuit:compile:nationality && pnpm run circuit:setup:nationality && pnpm run circuit:contribute:nationality && pnpm run circuit:export:nationality"
  },
  "dependencies": {
    "express": "^4.21.2",
    "snarkjs": "^0.7.5",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "circomlibjs": "^0.1.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "circomlib": "^2.0.5"
  }
}
